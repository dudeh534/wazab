<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ourincheon.wazap.MypageActivity">

    <EditText
        android:drawableLeft="@drawable/star"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:hint="이름"
        android:id="@+id/eName"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:drawableLeft="@drawable/star"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:hint="전공 및 희망역할"
        android:id="@+id/eMajor"
        android:layout_below="@+id/eName"
        android:layout_alignLeft="@+id/eName"
        android:layout_alignStart="@+id/eName" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:hint="학교"
        android:id="@+id/eUniv"
        android:paddingLeft="25dp"
        android:layout_below="@+id/eMajor"
        android:layout_alignLeft="@+id/eMajor"
        android:layout_alignStart="@+id/eMajor" />

    <EditText
        android:drawableLeft="@drawable/star"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:hint="지역"
        android:id="@+id/eLoc"
        android:layout_below="@+id/eUniv"
        android:layout_alignLeft="@+id/eUniv"
        android:layout_alignStart="@+id/eUniv" />

    <EditText
        android:drawableLeft="@drawable/star"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:hint="카카오 아이디"
        android:id="@+id/eKakao"
        android:layout_below="@+id/eLoc"
        android:layout_alignLeft="@+id/eLoc"
        android:layout_alignStart="@+id/eLoc" />

    <ImageView
        android:id="@+id/ePro"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/icon_user"
        android:layout_below="@+id/eName"
        android:layout_alignRight="@+id/eIntro"
        android:layout_alignEnd="@+id/eIntro" />

    <TextView
        android:drawableLeft="@drawable/star"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="200자 소개"
        android:layout_below="@+id/eKakao"
        android:layout_alignLeft="@+id/eKakao"
        android:layout_alignStart="@+id/eKakao"
        android:layout_marginTop="30dp"
        android:id="@+id/textView8" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:singleLine="false"
        android:lines="3"
        android:textSize="18dp"
        android:id="@+id/eIntro"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:paddingLeft="25dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="기타경험/수상내역"
        android:id="@+id/textView9"
        android:layout_above="@+id/eExp"
        android:layout_alignLeft="@+id/eExp"
        android:layout_alignStart="@+id/eExp" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:singleLine="false"
        android:lines="3"
        android:textSize="18dp"
        android:id="@+id/eExp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
